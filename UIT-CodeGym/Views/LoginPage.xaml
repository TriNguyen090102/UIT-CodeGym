<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UIT_CodeGym.MVVM.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:UIT_CodeGym.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:UIT_CodeGym.MVVM.ViewModels"
    Title="LoginPage"
    x:DataType="vm:LoginPageVM"
    BackgroundColor="Transparent"
    Shell.NavBarIsVisible="false">
    <Grid>
        <Image Aspect="AspectFill" Source="background2.jpg" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Margin="20,20,0,0"
                FontFamily="RalewayExtraBold"
                FontSize="50"
                HorizontalOptions="Start"
                SemanticProperties.HeadingLevel="Level1"
                Text="UITCodeGym"
                TextColor="#05299E" />
            <StackLayout Grid.Column="0" VerticalOptions="Center">


                <Label
                    Margin="200,50"
                    FontFamily="RalewayBold"
                    FontSize="48"
                    SemanticProperties.HeadingLevel="Level1"
                    Text="Sign in"
                    TextColor="Black" />
                <controls:BorderlessEntry
                    Margin="60,0,100,10"
                    ClearButtonVisibility="WhileEditing"
                    FontFamily="RalewayRegular"
                    FontSize="20"
                    Placeholder="Student ID"
                    Text="{Binding StudentID}"
                    TextColor="Black" />
                <BoxView
                    Margin="60,0,100,40"
                    HeightRequest="1"
                    HorizontalOptions="Start"
                    WidthRequest="500" />
                <controls:BorderlessEntry
                    Margin="60,0,100,10"
                    FontFamily="RalewayRegular"
                    FontSize="20"
                    IsPassword="True"
                    Placeholder="Password"
                    Text="{Binding Password}"
                    TextColor="Black" />
                <BoxView
                    Margin="60,0,100,20"
                    HeightRequest="1"
                    HorizontalOptions="Start"
                    WidthRequest="500" />

                <HorizontalStackLayout>
                    <Button
                        Margin="60,10,20,20"
                        Command="{Binding LoginCommand}"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        WidthRequest="250">
                        <Button.Text>Sign in</Button.Text>
                        <Button.TextColor>White</Button.TextColor>
                        <Button.FontSize>24</Button.FontSize>
                        <Button.FontFamily>RalewaySemiBold</Button.FontFamily>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="0.0" Color="#7B90D7" />
                                <GradientStop Offset="1.0" Color="#FFA9DD" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <!--<Button
                        Margin="60,10,20,20"
                        Command="{Binding CreateAccountCommand}"
                        HeightRequest="50"
                        HorizontalOptions="Start"
                        WidthRequest="250">
                        <Button.Text>Create Account</Button.Text>
                        <Button.TextColor>White</Button.TextColor>
                        <Button.FontSize>24</Button.FontSize>
                        <Button.FontFamily>RalewaySemiBold</Button.FontFamily>
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="0.0" Color="#7B90D7" />
                                <GradientStop Offset="1.0" Color="#FFA9DD" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>-->
                </HorizontalStackLayout>
            </StackLayout>


        </Grid>
    </Grid>
</ContentPage>

